<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="@dimen/zero_size"
        android:layout_height="40dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:background="@color/colorPrimaryLight"
        android:text="@string/by_author"
        android:textSize="@dimen/text_size_medium"
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/review_author"
        android:layout_width="@dimen/zero_size"
        android:layout_height="40dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:background="@color/colorPrimaryLight"
        tools:text="@string/review_author_mockup"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/colorBlack"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView" />
    <TextView
        android:id="@+id/review_content"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        tools:text="@string/lorum_ipsum_mockup_long"
        app:layout_constraintTop_toBottomOf="@id/review_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/view_spacing_vertical_3"
        android:layout_marginBottom="@dimen/view_spacing_vertical_1"
        android:paddingBottom="@dimen/view_spacing_vertical_2"/>
</android.support.constraint.ConstraintLayout>